	</style>

	<script type = "text/javascript">
	


		//You can use jQuery to trim down lines of code! 
		$("#empty-div").html("<h1> Hello friends! </h1");

		var newDiv = $("<div>");
		newDiv.html("A pleasure to meet yoU! ")

		$ ("# empty-div").append(newDiv);

		newDiv.attr("class", "fancy");


	</script>
